@using SIS.Application.Features.Commands.UserPasswordCommand.UserPasswordUpdate;
@model UserPasswordUpdateCommandRequest

<div class="card">
	<div class="card-body">
		<h5 class="card-title">Change Password</h5>
		<div class="row">
			<div class="col-md-10 col-lg-6">
				<form method="post" asp-action="changepassword">
					<div class="form-group">
						<label>Old Password</label>
						<input asp-for="OldPassword" class="form-control">
						<span asp-validation-for="OldPassword"></span>
					</div>
					<div class="form-group">
						<label>New Password</label>
						<input asp-for="NewPassword" class="form-control">
						<span asp-validation-for="NewPassword"></span>
					</div>
					<div class="form-group">
						<label>Confirm Password</label>
						<input asp-for="NewPasswordConfirm" class="form-control">
						<span asp-validation-for="NewPasswordConfirm"></span>
					</div>
					<div asp-validation-summary="ModelOnly">
					</div>
					<button class="btn btn-primary" type="submit">Save Changes</button>
				</form>
			</div>
		</div>
	</div>
</div>