@using SIS.Application.Features.Commands.SliderCommand.CreateSlider;
@model CreateSliderCommandRequest

<div class="col-md-6">
	<div class="card">

		<div class="card-body">
			<form asp-action="create" method="post" enctype="multipart/form-data">
				<div class="form-group">
					<label>Title</label>
					<input asp-for="Title" class="form-control">
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label>Caption</label>
					<input asp-for="Caption" class="form-control">
					<span asp-validation-for="Caption" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label>Upload Images</label>
					<input asp-for="Images" class="form-control">
					<span asp-validation-for="Images" class="text-danger"></span>
				</div>

				
				<div class="text-end">
					<button type="submit" class="btn btn-primary">Create</button>
				</div>
			</form>
		</div>
	</div>
</div>