@using SIS.Application.Features.Queries.TeacherQuery.GetAll;
@using SIS.Domain.Entities;
@model GetAllTeacherQueryResponse



<form asp-action="index" method="get">

	<div class="student-group-form">
		<div class="row">

			<div class="col-lg-2 col-md-6">
				<div class="form-group">
					<input name="SearchByName" value="@ViewData["SearchByNameValue"]" class="form-control" placeholder="Search by Name ...">
				</div>
			</div>

			<div class="col-lg-2 col-md-6">
				<div class="form-group">
					<input name="SearchBySurname" value="@ViewData["SearchBySurnameValue"]" class="form-control" placeholder="Search by Surname ...">
				</div>
			</div>
			
			<div class="col-lg-3 col-md-6">
				<div class="form-group">
					<input name="SearchByQualification" value="@ViewData["SearchByQualificationValue"]" class="form-control" placeholder="Search by Qualificatoin ...">
				</div>
			</div>

			<div class="col-lg-3 col-md-6">
				<div class="form-group">
					<input name="SearchBySubject" value="@ViewData["SearchBySubjectValue"]" class="form-control" placeholder="Search by Subject ...">
				</div>
			</div>

			
			<div class="col-lg-2">
				<div class="search-student-btn">
					<button type="submit" class="btn btn-primary">Search</button>
				</div>
			</div>


		</div>

	</div>
</form>

<div class="row">
	<div class="col-sm-12">
		<div class="card card-table">
			<div class="card-body">

				<div class="page-header">
					<div class="row align-items-center">
						<div class="col">
							<h3 class="page-title">Teachers</h3>
						</div>
						<div class="col-auto text-end float-end ms-auto download-grp">
							<a href="#" class="btn btn-outline-primary me-2"><i class="fas fa-download"></i> Download</a>
							<a asp-action="create" class="btn btn-primary"><i class="fas fa-plus"></i></a>
						</div>
					</div>
				</div>

				<div class="table-responsive">
					<table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped">
						<thead class="student-thread">
							<tr>
								<th>
									<div class="form-check check-tables">
										<input class="form-check-input" type="checkbox" value="something">
									</div>
								</th>
								<th>Name</th>
								<th>Class</th>
								<th>Gender</th>
								<th>Qualification</th>
								<th>Department</th>
								<th>Mobile Number</th>
								<th>Address</th>
								<th class="text-end">Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (AppUser user in Model.Teachers)
							{
								<tr>
									<td>
										<div class="form-check check-tables">
											<input class="form-check-input" type="checkbox" value="something">
										</div>
									</td>
									<td>
										<h2 class="table-avatar">
											<a asp-action="detail" asp-route-id="@user.Id" class="avatar avatar-sm me-2">
												<img class="avatar-img rounded-circle" src="~/ProfilePhotos/@user.ImageSrc" alt="User Image"></a>
											<a asp-action="detail" asp-route-id="@user.Id">@user.FirstName @user.LastName</a>
										</h2>
									</td>
									<td>@user.ClassNumber</td>
									<td>@user.Gender</td>
									<td>@user.Qualification</td>
									<td>@user.Department.Name</td>
									<td>@user.PhoneNumber</td>
									<td>@user.Adress</td>
									<td class="text-end">
										<div class="actions">
											<a asp-action="update" asp-route-id="@user.Id" class="btn btn-sm bg-danger-light">
												<i class="feather-edit"></i>
											</a>
											<a asp-action="delete" asp-route-id="@user.Id" id="deletebtn" class="btn btn-sm bg-success-light me-2">
												<i class="feather-delete"></i>
											</a>
										</div>
									</td>
								</tr>

							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

